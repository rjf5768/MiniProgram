/* pages/classDetails/classDetails.wxss */
.container {
  padding: 20rpx;
}

.class-image {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.class-info {
  margin-top: 20rpx;
}

.class-name {
  font-size: 40rpx;
  font-weight: bold;
}

.class-description {
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #666;
}

.calendar-container {
  margin-top: 30rpx;
}

.picker {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.picker text:first-child {
  width: 200rpx;
  font-size: 32rpx;
}

button {
  margin-top: 40rpx;
  width: 100%;
  height: 80rpx;
  background-color: #1AAD19;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
}
